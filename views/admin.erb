<h2>Admin</h2>

 <div id="content" class="row">

<div class="span8 well">
<h3>Sites</h3>
<table class="table table-hover">
<% if @sites %>
<% @sites.each do |site| %>
<tr>
<td><a href=<%= "/admin/site/#{site.id}" %> ><%= site.title %></a></td>
<td><a href=<%="/admin/site/#{site.id}/delete"%>><i class="icon-remove"></i></a></td>
<td><a href=<%= "/admin/site/#{site.id}/inc" %>><i class="icon-arrow-up"></i></a><a href=<%= "/admin/site/#{site.id}/dec" %>><i class="icon-arrow-down"></i></a></td>
<td>[<%= Site.count - site.priority %>]</td>

</tr>
<% end %><% end %>
<td></td><td><a class="icon-file" href="/admin/site"></a></td>
<td></td><td></td>
</table>

<h3>Blogs</h3>
<table class="table table-hover">
<% if @blogs %>
<% @blogs.each do |blog| %>
<tr>
<td><a href=<%= "/admin/blog/#{blog.id}" %> ><%= blog.title %></a>
<td><a href=<%="/admin/blog/#{blog.id}/delete"%>><i class="icon-remove"></i></a></td>
</td><td><a href=<%= "/admin/blog/#{blog.id}/inc" %>><i class="icon-arrow-up"></i></a><a href=<%= "/admin/blog/#{blog.id}/dec" %>><i class="icon-arrow-down"></i></a></td>
<td>[<%= Blog.count - blog.priority %>]</td>
</tr>
<% end %> <% end %> 
<td></td>
<td><a class="icon-file" href="/admin/blog"></a></td><td></td><td></td>
</table>

<h3>Elements</h3>
<table class="table table-hover">

<tr><% if @firstelement %>
<td><a href=<%= "/admin/element/#{@firstelement.id}" %> ><%= @firstelement.title %></a><strong id="firstelement">#firstelement</strong>
<td><a href=<%="/admin/element/#{@firstelement.id}/delete"%>><i class="icon-remove"></i></a>
</td>
<td><a href=<%= "/admin/element/#{@firstelement.id}/inc" %>><i class="icon-arrow-up"></i></a><a href=<%= "/admin/element/#{@firstelement.id}/dec" %>><i class="icon-arrow-down"></i></a></td>
<td>[<%= @firstelement.priority %>]</td><% end %>
</tr>

<% if @elements %>
<% @elements.drop(1).each do |element| %>

<tr>
<td><a href=<%= "/admin/element/#{element.id}" %> ><%= element.title %></a>
<td><a href=<%="/admin/element/#{element.id}/delete"%>><i class="icon-remove"></i></a>
</td>
<td><a href=<%= "/admin/element/#{element.id}/inc" %>><i class="icon-arrow-up"></i></a><a href=<%= "/admin/element/#{element.id}/dec" %>><i class="icon-arrow-down"></i></a></td>
<td>[<%= Element.count - element.priority %>]</td>
</tr>
<% end %><% end %>
<td></td>
<td><a class="icon-file" href="/admin/element"></a></td><td></td><td></td>
</table>
<a class="btn btn-inverse" href="/adminlogout">Log Out as admin</a>&nbsp<a class="btn btn-inverse" href="/">Back</a>
</div>


