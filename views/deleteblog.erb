<div id="login" class="row">
<div class="span12 well">
<% if @blog %>
<h1>You are about to delete <strong><em><%= @blog.title %></em></strong>. Are you sure?</h1>
<br>
<br>
	<form action=<%= "/admin/blog/#{params[:id]}" %> method="post">
		<input type="hidden" name="_method" value="delete">
		<input class="btn btn-danger" type="submit" value="Yes">
		<a class="btn btn-inverse" href="/admin">Cancel</a>
	</form>
<% else %>
	<p>blog not found.</p>
<% end %>
</div></div>
 






